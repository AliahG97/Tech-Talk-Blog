<div class="home-container" width="400px" height="400"></div>
<h2>
    This is the home page
</h2>
{{#each blogPost}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.content}}</p>
        <h5{{this.createdAt}} - {{this.updatedAt}}>
            </h5>

            <form action="/api/comment/{{this.id}}" method="POST">
                <textarea name="content" placeholder="Leave a comment"></textarea>
                {{!-- <input type="hidden" name="postId" value="{{this.id}}"> --}}
                <button><a type="submit" class="addComment" data-postId="{{this.id}}" href="/login">Post Comment</a></button>
            </form>
        <ul>
            {{#each this.Comments}}
            <li>{{format_date this.createdAt}} {{formatTimeWithoutSeconds this.createdAt}}  - {{this.user}} - {{this.content}}</li>
            {{/each}}
        </ul>        

    </div>
</div>
{{/each}}

